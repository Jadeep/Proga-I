// MENU.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdio.h"
#include "stdlib.h"
using namespace std;

void main()
{float b,h,l,r,c,C,R,T,k,i,g,o;
int P,F;
do{
cout<<"MENU";
	F=0;
cout<< "\n\n Ingrese que area desea: \n 0=Salir \n 1=Triangulo \n 2=Cuadrado \n 3=Circunferencia \n 4= Rectangulo \n ";
cin>>P;
switch(P)
{
case 0:
	cout<<"\n salir";
	break;
case 1:
	cout<<"\n Ingrese la base y la altura";
	cin>>b;
	cin>>h;
	T=(b*h)/2;
	cout<<"El area es:" <<T;
	break;
case 2:
	cout<<"\n Ingrese un lado";
	cin>>l;
	c=l*l;
    cout<<"El area es:" <<c;	
	break;
case 3:
	cout<<"\n Ingrese el radio";
	cin>>r;
	C=3.14*(r*r);
		cout<<C;
	break;
case 4:
	cout<<"\n ingrese la base y la altura";
	cin>>k;
	cin>>o;
	g=k*o;
	cout<<"El area es:"<<g;
	F=1;
	break;
    }
 }while(P!=0);
system("pause");
system("clr");
}
