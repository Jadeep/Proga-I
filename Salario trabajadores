// Salario trabajadores.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdio.h"
using namespace std;


void main()
{
	float A,B,S,Ds,Sn,i,N;
	cout<<"Ingrese el numeo de trabajadores"; 
	cin>> N;

	for(i=1;i<=N;i++)
	{

	cout<<"Ingrese el precio por hora";

	cin>> A;

	cout<<"Ingrese las horas trabajadas";

	cin>> B;

	S= A*B;

		cout<<"El salario es " << S; 
	
	Ds= S*0.13;
	cout<<"El descuento del IVA es  " << Ds;

   Sn= S-Ds;

   cout<<"El salario neto es  " << Sn;
   }
	getch();
}
